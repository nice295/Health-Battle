<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/should_press_image_view"
        android:src="@drawable/img_workout_down"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/should_press_explain_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/should_press_start_helper_text"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/should_press_count_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#7DB4D3"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/should_press_fin_image_view"
        android:src="@drawable/button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="32dp" />


</LinearLayout>